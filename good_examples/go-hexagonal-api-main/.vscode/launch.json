    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Mongo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd",
            "cwd": "${workspaceRoot}",
            "args": [
                "-v",
                "debug",
                "-env",
                "local",
                "-p",
                "8080",
                "-db",
                "mongo"
            ]
        },
        {
            "name": "Launch with Postgres",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd",
            "cwd": "${workspaceRoot}",
            "args": [
                "-v",
                "debug",
                "-env",
                "local",
                "-p",
                "8080",
                "-db",
                "postgres"
            ]
        }
    ]
}